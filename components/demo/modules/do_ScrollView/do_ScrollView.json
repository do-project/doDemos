  "IOS": {
    "Support": 1,
    "MinVersion": "iOS 7.0"
  },
  "Android": {
    "Support": 1,
    "MinVersion": "4.0"
  },
  "Windows": {
    "Support": 1,
    "MinVersion": ""
  },
  "WindowsPhone": {
    "Support": 1,
    "MinVersion": "8.1"
  },
  "Html": {
    "Support": 1,
    "MinVersion": "5.0"
  },
  "Properties": [
    {
      "ID": "direction",
      "Name": "布局方向",
      "Type": "String",
      "DefaultValue": "vertical",
      "EditType": "0",
      "Group": "",
      "Description": "scrollview只支持2个方向，只允许设计器内修改：horizontal：横向布局  vertical：纵向布局",
      "Design": {
        "Type": "List",
        "Data": [
          {
            "id": "horizontal",
            "value": "横向布局"
          },
          {
            "id": "vertical",
            "value": "纵向布局"
          }
        ]
      }
    },
    {
      "ID": "headerView",
      "Name": "表头视图",
      "Type": "String",
      "DefaultValue": "",
      "EditType": "0",
      "Group": "",
      "Description": "设置一个表头视图，可以下拉列表露出表头，设置一些效果，超出一个高度后松手可以触发一些加载数据的过程。这个值只能是source格式的ui文件。文件格式可参考Storage类。",
      "Design": {
        "Type": "Text",
        "Data": []
      }
    },
    {
      "ID": "isHeaderVisible",
      "Name": "是否显示headerview",
      "Type": "Bool",
      "DefaultValue": "false",
      "EditType": "0",
      "Group": "",
      "Description": "缺省false不显示",
      "Design": {
        "Type": "Boolean",
        "Data": []
      }
    },
    {
      "ID": "isShowbar",
      "Name": "是否支持显示滚动条效果",
      "Type": "Bool",
      "DefaultValue": "false",
      "EditType": "0",
      "Group": "",
      "Description": "为true的时候，当scrollview内内容超出scrollview的边界，会出现滚动条标识。",
      "Design": {
        "Type": "Boolean",
        "Data": []
      }
    }
  ],
  "Events": [
    {
      "ID": "pull",
      "Description": "下拉headerview事件",
      "ReturnType": "Node",
      "ReturnDesc": "返回{state,offset}，其中state表示headerview的状态，offset为headerview下拉的位移量；其中state=0：表示开始下拉headerview，在headerview下拉到headerview复位整个过程中，pull事件会触发很多次；state=1：表示下拉headerview超过headerview的高度，触发一次这个事件，前端开发者接受到这个事件会更新headerview的ui；state=2：下拉超过一定值，触发state=1事件后，松手会触发一次这个事件，前端开发者接受到这个事件会更新headerview的ui，然后开始加载数据，数据加载完后需要调用rebound方法让header复位"
    }
  ],
  "syncMethodes": [
    {
      "ID": "rebound",
      "Name": "headerview复位",
      "Description": "headerview复位",
      "ReturnType": "",
      "ReturnDesc": "",
      "Paras": []
    },
    {
      "ID": "toBegin",
      "Name": "滚到到左边或顶部",
      "Description": "如果是横向，则滚到左边。如果是纵向，则滚到顶部。",
      "ReturnType": "",
      "ReturnDesc": "",
      "Paras": []
    },
    {
      "ID": "toEnd",
      "Name": "滚到到右边或底部",
      "Description": "如果是横向，则滚到右边。如果是纵向，则滚到底部。",
      "ReturnType": "",
      "ReturnDesc": "",
      "Paras": []
    }
  ],
