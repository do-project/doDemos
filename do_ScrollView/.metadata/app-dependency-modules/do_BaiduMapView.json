{
  "ID": "do_BaiduMapView",
  "IsContainer": "0",
  "Type": "UI",
  "Name": "百度地图",
  "Version": "Internal",
  "Description": "集成百度地图，实现基本的地图功能，包括设置中心点，添加标记等",
  "Icon": "https://deviceone.blob.core.chinacloudapi.cn/store/R/20150723/909280f1-f0db-479f-832f-2965e24c2bb5.png",
  "IOS": {
    "Support": 1,
    "MinVersion": "7.0"
  },
  "Android": {
    "Support": 1,
    "MinVersion": "4.0"
  },
  "Windows": {
    "Support": 0,
    "MinVersion": ""
  },
  "WindowsPhone": {
    "Support": 0,
    "MinVersion": ""
  },
  "Html": {
    "Support": 1,
    "MinVersion": "5.0"
  },
  "Properties": [
    {
      "ID": "zoomLevel",
      "Name": "地图缩放等级",
      "Type": "Number",
      "DefaultValue": "10",
      "EditType": "1",
      "Group": "",
      "Description": "地图缩放等级，可以设置级别为 3-18 ,对应地图比例尺20m - 2000公里，具体对应关系可以参考百度地图开发文档",
      "Design": {
        "Type": "UInteger",
        "Data": []
      }
    }
  ],
  "Events": [
    {
      "ID": "touchMarker",
      "Description": "点击标记时触发",
      "ReturnType": "String",
      "ReturnDesc": "标记ID"
    }
  ],
  "syncMethodes": [
    {
      "ID": "addMarkers",
      "Name": "添加一组标记",
      "Description": "将一组经纬度用缩略图在百度地图标记出来,点击缩略图后弹出描述信息,缩略图地址为 data:// source:// 打头的URI格式，不能包含@符号。其中文件格式说明可参考Storage类",
      "ReturnType": "Bool",
      "ReturnDesc": "true 成功 false 失败",
      "Paras": [
        {
          "ID": "data",
          "Name": "数据",
          "Type": "Node",
          "Required": 1,
          "DefaultValue": "",
          "Description": "[{\"id\":\"标记ID,用户自定义标记唯一ID\",\"latitude\":\"纬度\",\"longitude\":\"经度\",\"url\":\"缩略图地址\",\"info\":\"描述信息\"},...]"
        }
      ]
    },
    {
      "ID": "removeAll",
      "Name": "移除所有标记",
      "Description": "移除所有标记",
      "ReturnType": "",
      "ReturnDesc": "",
      "Paras": []
    },
    {
      "ID": "removeMarker",
      "Name": "移除一组指定标记",
      "Description": "移除一组指定标记",
      "ReturnType": "",
      "ReturnDesc": "",
      "Paras": [
        {
          "ID": "ids",
          "Name": "标记ID数组",
          "Type": "Node",
          "Required": 1,
          "DefaultValue": "",
          "Description": "要移除的标记ID数组"
        }
      ]
    },
    {
      "ID": "setCenter",
      "Name": "设置地图中心点",
      "Description": "设置地图中心点",
      "ReturnType": "Bool",
      "ReturnDesc": "true 成功 false 失败",
      "Paras": [
        {
          "ID": "latitude",
          "Name": "纬度",
          "Type": "String",
          "Required": 1,
          "DefaultValue": "39.915174",
          "Description": "设置地图中心点纬度，默认是北京天安门坐标纬度"
        },
        {
          "ID": "longitude",
          "Name": "经度",
          "Type": "String",
          "Required": 1,
          "DefaultValue": "116.403901",
          "Description": "设置地图中心点经度，默认是北京天安门坐标经度"
        }
      ]
    }
  ],
  "asyncMethodes": []
}